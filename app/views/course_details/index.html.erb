<h1>Listing course_details</h1>

<table>
  <thead>
    <tr>
      <th>Course description</th>
      <th>Syllabus</th>
      <th>Recommended background</th>
      <th>Course format</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_details.each do |course_detail| %>
      <tr>
        <td><%= course_detail.course_description %></td>
        <td><%= course_detail.syllabus %></td>
        <td><%= course_detail.recommended_background %></td>
        <td><%= course_detail.course_format %></td>
        <td><%= course_detail.course_id %></td>
        <td><%= link_to 'Show', course_detail %></td>
        <td><%= link_to 'Edit', edit_course_detail_path(course_detail) %></td>
        <td><%= link_to 'Destroy', course_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

